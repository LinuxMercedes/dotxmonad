#!/bin/bash

#enable ctrl-alt-backspace
setxkbmap -option terminate:ctrl_alt_bksp

xrdb -merge .Xresources

#wallpaper
feh --bg-fill /home/nathan/Pictures/Wallpapers/swag.png &

xscreensaver -no-splash&

trayer --edge top --align right --SetDockType true --expand true --width 15 --height 18 --transparent true --alpha 0 --tint 0x000000 &

#xmobar &

trayer --edge top --align right --SetDockType true --expand true --width 15 --height 12 --transparent true --alpha 0 --tint 0x000000 &

if [ -x /usr/bin/xfce4-power-manager ] ; then
   sleep 1
   xfce4-power-manager &
fi

if [ -x /usr/bin/nm-applet ] ; then
   nm-applet --sm-disable &
fi

xfce4-volumed &

xfce4-settings-helper &

exec xmonad

